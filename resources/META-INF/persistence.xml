<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="ChessEngine" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.zivlazarov.chessengine.client.model.player.Player</class>
        <class>com.zivlazarov.chessengine.client.model.board.Tile</class>
        <class>com.zivlazarov.chessengine.client.model.pieces.Piece</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://10.0.0.17/chess"/>
            <property name="javax.persistence.jdbc.user" value="zivlazarov"/>
            <property name="javax.persistence.jdbc.password" value="zivlazarov"/>
        </properties>

    </persistence-unit>
</persistence>